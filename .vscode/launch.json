    "version": "0.2.0",
    "configurations": [
        {
            "name": "HTTPS API",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "dotnet: build and trust cert",
            "program": "${workspaceFolder}/src/API/bin/Debug/net10.0/API.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s/scalar/v1"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Local",
                "ASPNETCORE_URLS": "https://localhost:8443;http://localhost:8080"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/src/API/Views"
            }
        },
        {
            "name": "MCP API",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "dotnet: build and trust cert",
            "program": "${workspaceFolder}/src/MCP/bin/Debug/net10.0/MCP.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Local",
                "ASPNETCORE_URLS": "https://localhost:9443;http://localhost:9080"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/src/MCP/Views"
            }
        },
    ]
}